-enable-gecko-emf: true

-buildpath: \
	org.geckoprojects.mongo.core;version=latest,\
	org.mongodb.mongo-java-driver;version=latest,\
	org.mongodb.driver-sync,\
	org.osgi.framework,\
	junit-jupiter-api,\
	org.osgi.test.junit5,\
	org.geckoprojects.emf.repository.mongo

javac.source: 1.8
javac.target: 1.8


Bundle-Version: 2.1.16.SNAPSHOT
Private-Package: org.geckoprojects.emf.repository.mongo.tests

# Needed for Mockito's mocking to work
-runsystempackages.objenesis: sun.misc,sun.reflect

# Use Felix by default
-runfw: org.apache.felix.framework;version='[7.0.0,7.0.0]'
-runvm: -ea
-runprogramargs: ds.showtrace=true\n\
	felix.log.level=4

Bundle-Name: EMF Repository Mongo Integration Tests 
Bundle-Description: EMF Mongo Repository Implementation Integration Tests

-runrequires: \
	bnd.identity;id='org.geckoprojects.emf.repository.api',\
	bnd.identity;id='org.geckoprojects.emf.repository.mongo',\
	bnd.identity;id='org.geckoprojects.emf.repository.mongo.tests'
-runproperties: mongo.host=${def;mongo.host;localhost},\
	org.osgi.service.log.admin.loglevel=DEBUG,\
	logback.configurationFile=file:${.}/logback.xml,\
	felix.log.level=4
	
-runee: JavaSE-1.8

-resolve.effective: active;skip:="osgi.service"